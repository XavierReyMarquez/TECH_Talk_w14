<div class="text-center">
  <h2>{{title}}</h2>
  <p>{{content}}</p>
  <p>Created by {{user.username}} on {{format_date date_created}}</p>

  {{#each comments as |comment|}}
    <p>
      {{comment.content}}
    </p>
  {{/each}}

  <input class="form-input" type="text" id="user-comment" name="user-comment" />

  <p>
    <button id="comment-button" class="btn btn-primary">Leave Comment</button>
  </p>

</div>

<script src="/js/comment.js"></script>